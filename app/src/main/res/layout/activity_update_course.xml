<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpdateCourseActivity">

    <!--Edit text to enter course name-->
    <EditText
        android:id="@+id/idEdtCourseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Course Name" />

    <!--edit text to enter course duration-->
    <EditText
        android:id="@+id/idEdtCourseDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Course Duration" />

    <!--edit text to display course tracks-->
    <EditText
        android:id="@+id/idEdtCourseTracks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Course Tracks" />

    <!--edit text for course description-->
    <EditText
        android:id="@+id/idEdtCourseDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Course Description" />

    <!--button for updating course-->
    <Button
        android:id="@+id/idBtnUpdateCourse"
        android:layout_width="@dimen/size_btnWidth"
        android:layout_height="@dimen/size_btnHeight"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/size_all"
        android:background="@drawable/btn"
        android:text="@string/update_course"
        android:textColor="@color/white"
        android:textSize="@dimen/size_title"
        android:textAllCaps="false"  />
    <Button
        android:id="@+id/idBtnDeleteCourse"
        android:layout_width="@dimen/size_btnWidth"
        android:layout_height="@dimen/size_btnHeight"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/size_all"
        android:background="@drawable/btn"
        android:text="@string/delete_course"
        android:textColor="@color/white"
        android:textSize="@dimen/size_title"
        android:textAllCaps="false" />

</LinearLayout>